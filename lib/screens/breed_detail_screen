import 'package:flutter/material.dart';
import '../lib/data/breeds.dart';

class BreedDetailScreen extends StatelessWidget {
  final PageController controller;

  const BreedDetailScreen({super.key, required this.controller});

  @override
  Widget build(BuildContext context) {
    final sortedBreeds = List.of(breeds)..sort((a, b) => a.name.compareTo(b.name));

    return PageView.builder(
      controller: controller,
      scrollDirection: Axis.horizontal,
      itemCount: sortedBreeds.length,
      itemBuilder: (context, index) {
        final breed = sortedBreeds[index];

        return Scaffold(
          backgroundColor: const Color.fromRGBO(239, 225, 200, 1),
          body: SafeArea(
            child: Column(
              children: [
                SizedBox(
                  height: MediaQuery.of(context).size.height * 0.5,
                  child: Image.asset(
                    breed.imagePath,
                    fit: BoxFit.contain,
                    width: double.infinity,
                  ),
                ),
                Expanded(
                  child: SingleChildScrollView(
                    padding: const EdgeInsets.all(20),
                    child: Text(
                      breed.description,
                      style: const TextStyle(
                        fontSize: 16,
                        height: 1.6,
                        fontFamily: 'RobotoSlab',
                      ),
                    ),
                  ),
                ),
              ],
            ),
          ),
        );
      },
    );
  }
}